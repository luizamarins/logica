programa
{
	
	funcao inicio()
	{
		//tipos de variáveis
		/* comentário em blocos*/
		
		cadeia nome
		inteiro idade
		real peso, altura
		caracter estadoCivil

		escreva("Digite o nome:")
		leia(nome)

		escreva("Digite a idade:")
		leia(idade)

		escreva("Digite o peso:")
		leia(peso)

		escreva("Digite a altura:")
		leia(altura)

		escreva("Digite o estado civil ('S','C','V','D'):")
		leia(estadoCivil)

		escreva("\n",nome,"\n",idade,"\n",peso,"\n",altura,"\n",estadoCivil)
		
	}
}
